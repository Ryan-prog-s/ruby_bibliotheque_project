<p style="color: green"><%= notice %></p>

<%= render @book %>

<div>
  <h1><%= @book.title %></h1>
  <p><%= @book.author %></p>
  <p><%= @book.publish_year %></p>

  <%= link_to "Edit this book", edit_book_path(@book) %> |
  <%= link_to "Back to books", books_path %>

  <%= button_to "Destroy this book", @book, method: :delete %>

  <% if @borrow %>
    <%= button_to 'Return Book', borrow_path(@borrow), method: :delete %>
  <% else %>
    <%= button_to 'Borrow Book', borrows_path(book_id: @book.id), method: :post %>
  <% end %>
</div>
